import random
from collections import Counter
import turtle



Words='AndhraPradesh,ArunachalPradesh,Assam,Bihar,Chhattisgarh,Goa,Gujarat,Haryana,HimachalPradesh,Jharkhand,Karnataka,Kerala,MadhyaPradesh,Maharashtra,Manipur,Meghalaya,Mizoram,Nagaland,Odisha,Punjab,Rajasthan,Sikkim,TamilNadu,Telangana,Tripura,UttarPradesh,Uttarakhand,WestBengal'
Words = Words.split(',')
word=random.choice(Words)


print("Guess the word! HINT: States of India")
print("Remember! The first letter is in capital")

for i in word:
    print('_',end='')
print()

playing = True
AlreadyGuessed= ''
chances= len(word)+2
correct = 0
flag = 0

try:
    while (chances !=0) and flag == 0:
        print()
        chances -=1

        try:
            guess = str(input("Enter guess:"))
        except:
            print('Enter only a letter!')
            continue

            
        if not guess.isalpha():
            print('Enter only a LETTER')
            continue
        elif len(guess) > 1:
            print('Enter only a SINGLE letter')
            continue
        elif guess in AlreadyGuessed:
            print('You have already guessed that letter. Try Again!')
            continue
                            
        if guess in word:
            k= word.count(guess)
            for _ in range (k):
                AlreadyGuessed += guess
            

        for char in word:
            if char in AlreadyGuessed and (Counter(AlreadyGuessed) != Counter(word)):
                print(char,end='')
                correct += 1

            elif (Counter(AlreadyGuessed) == Counter(word)):
                print("The word is:", end='')
                print(word)
                flag = 1
                print('Congratulations, You won!')
                
                wn = turtle.Screen()
                wn.bgcolor("white")
                t = turtle.Turtle()
                t.color("black")
                t.pensize(3)
                t.left(90)
                t.forward(170)
                t.left(90)
                t.forward(75)
                t.left(90)
                t.forward(30)
                t.right(90)
                t.circle(20)
                t.left(90)
                t.forward(100)
                t.done()
                wn.exitonclick()

                
                
                break
                                    
            else:
                print('_', end ='')

                

                
        

    if chances <= 0 and (Counter(AlreadyGuessed) != Counter(word)):
                print()
                print('You lost! Try again...')
                print('The word was:{}'. format(word))

except KeyboardInterrupt:
    print()
    print('Bye! Try again.')
    exit()
          




